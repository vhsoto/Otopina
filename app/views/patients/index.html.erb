<h1>Lista de pacientes</h1> 
<br>
<div class="row">
  <div class="col-md-4 col-lg-4">
    <%= link_to 'Crear paciente', new_patient_path, class: "btn btn-primary pull-left" %>
  </div>
  <div class="col-md-4 col-lg-4 text-center">
    <div class="input-group">
      <%= text_field_tag "filter", nil, class: "form-control", placeholder: "Buscar..." %>
      <span class="input-group-btn">
        <%= link_to nil, class: "btn btn-primary" do  %> 
        <i class="fa fa-search"></i>
        <% end %>
      </span>      
    </div>    
  </div>
  <div class="col-md-4 col-lg-4">
    <%= link_to root_path, class: "btn btn-primary pull-right"  do %>
      <i class="fa fa-home"></i>
    <% end %>
  </div>
</div>       

<br>
<br>

<div class="table-responsive">
  <table class="table table-striped table-list-search">
    <thead>
      <tr>
        <th>Tipo de documento</th>
        <th>Número de documento</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>Edad</th>
        <th>Género</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="searchable">
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.document_type %></td>
          <td><%= patient.document_number %></td>
          <td><%= patient.name %></td>
          <td><%= patient.lastname %></td>
          <td><%= patient.age %></td>
          <td><%= patient.gender %></td>
          <td><%= link_to patient , class: "btn btn-primary btn-sm" do %>
            <i class="fa fa-search"></i>
            <% end %>
          </td>
          <td><%= link_to edit_patient_path(patient) , class: "btn btn-info btn-sm" do %>
            <i class="fa fa-pencil"></i>
            <% end %>
          </td>
          <td><%= link_to patient, method: :delete, data: { confirm: '¿Está seguro(a) que desea eliminar?' } , class: "btn btn-danger btn-sm" do %>
            <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<br>

<%= link_to 'Crear paciente', new_patient_path, class: "btn btn-primary btn-sm" %> <%= link_to root_path, class: "btn btn-primary btn-sm pull-right"  do%>
  <i class="fa fa-home"></i>
<% end %>
