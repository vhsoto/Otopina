<div class="modal fade" id="modalPaciente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="exampleModalLabel">Lista de pacientes</h4>
        <br>        
        <div class="row">
          <div class="text-center col-sm-8 col-md-8 col-lg-8">
            <div class="input-group">
              <%= text_field_tag "filter", nil, class: "form-control", placeholder: "Buscar..." %>
              <span class="input-group-btn">
                <%= link_to nil, class: "btn btn-primary disabled" do  %> 
                <i class="fa fa-search"></i>
                <% end %>
              </span>      
            </div> 
          </div>
        </div> 
      </div>
      <div class="modal-body"> 
        <div class="table-responsive">
          <table class="table table-hover table-list-search">
            <thead>
              <tr>
                <th>Tipo de documento</th>
                <th>Número de documento</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Edad</th>
                <th>Género</th>        
              </tr>
            </thead>

            <tbody class="searchable">
              <% @patients.each do |patient| %>              
                <tr data-id="<%= patient.id %>" data-cedula="<%= patient.document_number %>">        
                  <td><%= patient.document_type %></td>
                  <td><%= patient.document_number %></td>
                  <td><%= patient.name %></td>
                  <td><%= patient.lastname %></td>
                  <td><%= patient.age %></td>
                  <td><%= patient.gender %></td>   
                </tr>                
              <% end %>
            </tbody>
          </table>
        </div>
      </div>      
    </div>
  </div>
</div>