<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td class="text-right">
              <%= link_to edit_service_path(service), class: "btn btn-info btn-sm" do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to service, method: :delete, data: { confirm: 'Â¿Seguro que desea eliminar?' } , class: "btn btn-danger btn-sm" do %>
                <i class="fa fa-trash"></i>
              <% end %>
          </td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


