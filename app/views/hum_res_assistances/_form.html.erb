<h4><span class="label label-success"><%= @adverse_event.patient.document_number %> <%= @adverse_event.patient.name %> <%= @adverse_event.patient.lastname %></span></h4>
<%= form_for([@adverse_event,@hum_res_assistance]) do |f| %>
  <% if @hum_res_assistance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hum_res_assistance.errors.count, "error") %> y el recurso humano asistencial utilizado no puede ser guardado:</h2>

      <ul>
      <% @hum_res_assistance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-lg-4">
        <%= f.label :time, "Fecha" %><br>
        <%= f.datetime_select :time, class: "form-control" %>
      </div>
    </div>    
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-lg-4">
        <%= f.label :name, "Nombre" %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>    
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-2 col-lg-2">
        <%= f.label :qty, "Cantidad" %><br>
        <%= f.number_field :qty, class: "form-control", placeholder: "hora" %> 
      </div>
    </div>    
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-2 col-lg-2">
        <%= f.label :price, "Precio" %><br>
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>    
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-lg-4">
        <%= f.label :service_id, "Servicio" %><br>
        <%= collection_select(:hum_res_assistance, :service_id, Service.all, :id, :name, {}, class: "form-control") %>
      </div>
    </div>    
  </div>  
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary btn-sm" %>
  
  <%= f.hidden_field :adverse_event_id %>
<% end %>
