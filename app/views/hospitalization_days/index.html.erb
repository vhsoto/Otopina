<p id="notice"><%= notice %></p>

<h1>Listing Hospitalization Days</h1>

<table>
  <thead>
    <tr>
      <th>Qty</th>
      <th>Price</th>
      <th>Subtotal</th>
      <th>Date</th>
      <th>Adverse event</th>
      <th>Service</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitalization_days.each do |hospitalization_day| %>
      <tr>
        <td><%= hospitalization_day.qty %></td>
        <td><%= hospitalization_day.price %></td>
        <td><%= hospitalization_day.subtotal %></td>
        <td><%= hospitalization_day.date %></td>
        <td><%= hospitalization_day.adverse_event %></td>
        <td><%= hospitalization_day.service %></td>
        <td><%# link_to 'Show', hospitalization_day %></td>
        <td><%# link_to 'Edit', edit_hospitalization_day_path(hospitalization_day) %></td>
        <td><%= link_to 'Destroy', hospitalization_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

