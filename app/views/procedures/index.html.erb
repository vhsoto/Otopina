<p id="notice"><%= notice %></p>

<h1>Lista de procedimientos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Código</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procedures.each do |procedure| %>
      <tr>
        <td><%= procedure.name %></td>
        <td><%= procedure.code %></td>
        <td><%= link_to 'Ver', procedure %></td>
        <td><%= link_to 'Editar', edit_procedure_path(procedure) %></td>
        <td><%= link_to 'Eliminar', procedure, method: :delete, data: { confirm: '¿Está seguro que desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear procedimiento', new_procedure_path %>
