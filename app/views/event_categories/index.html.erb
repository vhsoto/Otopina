<p id="notice"><%= notice %></p>

<h1>Lista de categorías de eventos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_categories.each do |event_category| %>
      <tr>
        <td><%= event_category.name %></td>
        <td><%= link_to 'Ver', event_category %></td>
        <td><%= link_to 'Editar', edit_event_category_path(event_category) %></td>
        <td><%= link_to 'Eliminar', event_category, method: :delete, data: { confirm: '¿Está seguro que quiere eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear categoría de evento', new_event_category_path %>
