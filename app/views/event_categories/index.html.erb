<h1>Lista de categorías de eventos</h1>
<br>
<div class="row">
  <div class="col-sm-4 col-md-4 col-lg-4">
    <%= link_to 'Crear categoría de evento', new_event_category_path, class: "btn btn-primary" %>
  </div>
  <div class="col-sm-4 col-md-4 col-lg-4">
    <div class="input-group">
      <%= text_field_tag "filter", nil, class: "form-control", placeholder: "Buscar..." %>
      <span class="input-group-btn">
        <%= link_to nil, class: "btn btn-primary" do  %> 
        <i class="fa fa-search"></i>
        <% end %>
      </span>      
    </div>
  </div>
  <div class="col-sm-4 col-md-4 col-lg-4">
    <%= link_to root_path, class: "btn btn-primary pull-right" do %>
      <i class="fa fa-home"></i>  
    <% end %>     
  </div>
</div>
 
<br>
<br>
<div class="responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="searchable">
      <% @event_categories.each do |event_category| %>
        <tr>
          <td><%= event_category.name %></td>
          <td><%= link_to event_category, class: "btn btn-primary btn-sm" do %>
                <i class="fa fa-search"></i>  
              <% end %>  
          </td>
          <td><%= link_to edit_event_category_path(event_category), class: "btn btn-info btn-sm" do %>
                <i class="fa fa-pencil"></i>  
              <% end %>  </td>
          <td><%= link_to event_category, method: :delete, data: { confirm: '¿Está seguro(a) que quiere eliminar?' }, class: "btn btn-danger btn-sm" do %>
                <i class="fa fa-trash"></i>  
              <% end %>  </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Crear categoría de evento', new_event_category_path, class: "btn btn-primary" %>
