<h1>Lista de eventos</h1>

<table>
  <thead>
    <tr>
      <th>Detalle</th>
      <th>Categoría evento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.Detail %></td>
        <td><%= event.event_category %></td>
        <td><%# link_to 'Ver', event %></td>
        <td><%# link_to 'Editar', edit_event_path(event) %></td>
        <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: '¿Está seguro que quiere eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear evento', new_event_category_event_path(@event_category) %>
