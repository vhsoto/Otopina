<h1>Lista de cargos</h1>
<br>
<%= link_to 'Crear cargo', new_charge_path, class: "btn btn-primary" %> <%= link_to root_path, class: "btn btn-primary pull-right"  do%>
  <i class="fa fa-home"></i>
<% end %>
<br>
<br>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @charges.each do |charge| %>
        <tr>
          <td><%= charge.name %></td>
          <td class="pull-right">
              <%= link_to edit_charge_path(charge), class: "btn btn-info btn-sm" do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to charge, method: :delete, data: { confirm: '¿Está seguro(a) que quiere eliminar?' }  , class: "btn btn-danger btn-sm" do %>
                <i class="fa fa-trash"></i>
              <% end %>
          </td>          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'Crear cargo', new_charge_path, class: "btn btn-primary" %>
